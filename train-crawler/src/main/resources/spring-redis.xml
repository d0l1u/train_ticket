<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <!-- jedisPool-->
    <bean id="jedisPoolConfig" class="redis.clients.jedis.JedisPoolConfig">
        <property name="maxIdle" value="${redis.maxIdle}" />
        <property name="maxTotal" value="${redis.maxTotal}" />
        <property name="maxWaitMillis" value="${redis.maxWaitMillis}" />
        <property name="testOnBorrow" value="${redis.testOnBorrow}" />
    </bean>

    <!-- 开关-->
    <bean id="switchJedisClient" class="com.kuyou.train.common.jedis.JedisClient">
        <property name="jedisPool">
            <bean class="redis.clients.jedis.JedisPool">
                <constructor-arg index="0" ref="jedisPoolConfig" />
                <constructor-arg index="1" value="${public.host}" />
                <constructor-arg index="2" value="${public.port}" type="int" />
                <constructor-arg index="3" value="${public.timeout}" type="int" />
                <constructor-arg index="4" value="${public.password}" />
                <constructor-arg index="5" value="${public.switch.db}" type="int" />
            </bean>
        </property>
    </bean>

    <!-- 开关-->
    <bean id="ipJedisClient" class="com.kuyou.train.common.jedis.JedisClient">
        <property name="jedisPool">
            <bean class="redis.clients.jedis.JedisPool">
                <constructor-arg index="0" ref="jedisPoolConfig" />
                <constructor-arg index="1" value="${public.host}" />
                <constructor-arg index="2" value="${public.port}" type="int" />
                <constructor-arg index="3" value="${public.timeout}" type="int" />
                <constructor-arg index="4" value="${public.password}" />
                <constructor-arg index="5" value="${public.ip.db}" type="int" />
            </bean>
        </property>
    </bean>

    <!--  外网-订单推送 -->
    <bean id="orderJedisClient" class="com.kuyou.train.common.jedis.JedisClient">
         <property name="jedisPool">
             <bean class="redis.clients.jedis.JedisPool">
                 <constructor-arg index="0" ref="jedisPoolConfig" />
                 <constructor-arg index="1" value="${public.host}" />
                 <constructor-arg index="2" value="${public.port}" type="int" />
                 <constructor-arg index="3" value="${public.timeout}" type="int" />
                 <constructor-arg index="4" value="${public.password}" />
                 <constructor-arg index="5" value="${public.order.db}" type="int" />
             </bean>
         </property>
    </bean>

    <!--  外网-cookie -->
    <bean id="cookieJedisClient" class="com.kuyou.train.common.jedis.JedisClient">
        <property name="jedisPool">
            <bean class="redis.clients.jedis.JedisPool">
                <constructor-arg index="0" ref="jedisPoolConfig" />
                <constructor-arg index="1" value="${public.host}" />
                <constructor-arg index="2" value="${public.port}" type="int" />
                <constructor-arg index="3" value="${public.timeout}" type="int" />
                <constructor-arg index="4" value="${public.password}" />
                <constructor-arg index="5" value="${public.cookie.db}" type="int" />
            </bean>
        </property>
    </bean>

    <bean id="flagJedisClient" class="com.kuyou.train.common.jedis.JedisClient">
        <property name="jedisPool">
            <bean class="redis.clients.jedis.JedisPool">
                <constructor-arg index="0" ref="jedisPoolConfig" />
                <constructor-arg index="1" value="${public.host}" />
                <constructor-arg index="2" value="${public.port}" type="int" />
                <constructor-arg index="3" value="${public.timeout}" type="int" />
                <constructor-arg index="4" value="${public.password}" />
                <constructor-arg index="5" value="${public.flag.db}" type="int" />
            </bean>
        </property>
    </bean>

    <!-- 内网-效率统计 -->
    <bean id="statisticsJedisClient" class="com.kuyou.train.common.jedis.JedisClient">
        <property name="jedisPool">
            <bean class="redis.clients.jedis.JedisPool">
                <constructor-arg index="0" ref="jedisPoolConfig" />
                <constructor-arg index="1" value="${public.host}" />
                <constructor-arg index="2" value="${public.port}" type="int" />
                <constructor-arg index="3" value="${public.timeout}" type="int" />
                <constructor-arg index="4" value="${public.password}" />
                <constructor-arg index="5" value="${public.statistics.db}" type="int" />
            </bean>
        </property>
    </bean>

</beans>