<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:mvc="http://www.springframework.org/schema/mvc"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.1.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd">

<!-- ========== 定义连接管理器 ========== -->
	<bean id="connectionManager"
		class="org.apache.http.impl.conn.PoolingHttpClientConnectionManager">
		<!-- 最大连接数 -->
		<property name="maxTotal" value="300" />
		<!--设置每个主机最大的并发数 -->
		<property name="defaultMaxPerRoute" value="300" />
		<!-- 连接不活动时，否检测连接可用，默认 2000 毫秒， 传入正数标示启用该功能，负数表示禁用该功能 -->
		<property name="validateAfterInactivity" value="2000" />

	</bean>

	<!-- ========== 定义默认请求配置信息 ========== -->
	<!--定义requestConfig构建器，配置三种超时时间 -->
	<bean id="builder" class="org.apache.http.client.config.RequestConfig.Builder">
		<!--从连接池中获取到连接的最长时间 -->
		<property name="connectionRequestTimeout" value="2000" />
		<!--设置与服务器建立连接的最长时间 -->
		<property name="connectTimeout" value="2000" />
		<!--数据传输的最长时间 -->
		<property name="socketTimeout" value="2000" />
	</bean>

	<!-- 工厂构造出 requestConfig -->
	<bean id="requestConfig" class="org.apache.http.client.config.RequestConfig"
		factory-bean="builder" factory-method="build" />


	<!-- 定义http工具类 -->


	<!--定期清理无效连接 -->
	<bean class="org.apache.http.impl.client.IdleConnectionEvictor"
		destroy-method="shutdown">
		<constructor-arg index="0" ref="connectionManager" />
		<constructor-arg index="1" value="5" />
		<constructor-arg index="2" value="MINUTES" />
	</bean>
</beans>