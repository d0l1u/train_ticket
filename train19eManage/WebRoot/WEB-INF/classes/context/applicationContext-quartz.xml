	<bean id="nofiyCpQuartzTime"
		class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="notifyCpTask" />
		</property>

		<property name="cronExpression">
			<value>0/30 * * * * ?</value>
		</property>
	</bean>

	<bean id="notifyCpTask"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="notifyCpJob" />
		</property>
		<property name="targetMethod">
			<value>notifyCp</value>
		</property>
	</bean>
	
	<!-- 用户续费任务 -->
	<bean id="needRepayQuartzTime"
		class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="needRepayTimeTask" />
		</property>

		<property name="cronExpression">
			<value>0/30 * 1,2 * * ?</value>
		</property> 
		<!-- 
		<property name="cronExpression">
			<value>0/30 * * * * ?</value>
		</property>
		 -->
	</bean>

	<bean id="needRepayTimeTask"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="needRepayJob" />
		</property>
		<property name="targetMethod">
			<value>modifyNeedRepay</value>
		</property>
	</bean>

	<!-- 每晚执行更新代理商表信息 -->
	<bean id="userStatQuartzTime"
	class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="userStatTimeTask"/>
		</property>
		<property name="cronExpression">
			<value>0 30 3 * * ?</value>
		</property> 
	</bean>
	<bean id="userStatTimeTask" 
	class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
	<property name="targetObject">
		<ref bean="userStatToUserinfo"/>
	</property>
	<property name="targetMethod">
		<value>queryOrUpdateAndInsertUser</value>
	</property>
	</bean>
	
	<!-- 每晚执行更新统计前一天订单 -->
	<bean  id="orderInfoStatQuartzTime" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="orderinfoStatTimeTask"/>
		</property>
		<property name="cronExpression">
			<value>0 0 3 * * ?</value>
		</property>
	</bean>
	<bean id="orderinfoStatTimeTask" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="orderInfoToCpStat"/>
		</property>
		<property name="targetMethod">
			<value>queryToInsertOrderStat</value>
		</property>
	</bean>
	
		<!-- 第一次每晚执行更新统计前一天订单 -->
