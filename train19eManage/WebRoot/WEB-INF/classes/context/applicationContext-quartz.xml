		</property>
		<property name="targetMethod">
			<value>updateWorkerToClose</value>
		</property>
	</bean>
	
	<!-- 每天晚上自动开启停用原因为取消订单过多的 -->
	<bean id="ChangeStatus_Time" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="ChangeStatus_Task"/>
		</property>
		<property name="cronExpression">
			<value>0 30 1 * * ?</value>
		</property>
	</bean>
	<bean id="ChangeStatus_Task" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="ChangeStatus"/>
		</property>
		<property name="targetMethod">
			<value>updateStopStatus</value>
		</property>
	</bean>
	
