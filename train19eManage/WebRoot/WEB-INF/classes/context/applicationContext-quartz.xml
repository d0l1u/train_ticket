	<!-- 每天早上自动开启预定机器人功能 -->
	<bean id="OpenBookRobotJob_Time" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="OpenBookRobotJob_Task"/>
		</property>
		<property name="cronExpression">
			<value>0 50 6 * * ?</value>
		</property>
	</bean>
	<bean id="OpenBookRobotJob_Task" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="OpenBookRobotJob"/>
		</property>
		<property name="targetMethod">
			<value>updateWorkerToOpen</value>
		</property>
	</bean>
	
	<!-- 每天晚上自动关闭预定机器人功能 -->
	<bean id="CloseBookRobotJob_Time" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="CloseBookRobotJob_Task"/>
