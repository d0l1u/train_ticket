		<property name="cronExpression">
			<value>0 0 2 * * ?</value>
		</property>
	</bean>
	<bean id="tj_userInfoTask" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="tj_userInfo_job"/>
		</property>
		<property name="targetMethod">
			<value>queryTj_UserInfo</value>
		</property>
	</bean>
	
	<!-- 每晚执行更新统计tj_Hc_OrderInfo 
	<bean id="tj_Hc_OrderInfo_Time" class="org.springframework.scheduling.quartz.CronTriggerBean">
