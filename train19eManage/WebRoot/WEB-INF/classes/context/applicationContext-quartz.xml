		<property name="jobDetail">
			<ref bean="through_the_auditTask" />
		</property>

		<property name="cronExpression">
			<value>0 0/30 * * * ?</value>
		</property>
	</bean>
	
	<bean id="through_the_auditTask" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="through_the_auditJob"/>
		</property>
		<property name="targetMethod">
			<value>queryThrough_the_audit</value>
		</property>
	</bean>
	
