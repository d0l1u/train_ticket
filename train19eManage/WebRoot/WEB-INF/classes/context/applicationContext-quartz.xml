	<bean id="orderinfoStatTimeOneTask" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="orderInfoToCpStatOne"/>
		</property>
		<property name="targetMethod">
			<value>queryToInsertOrderStatOne</value>
