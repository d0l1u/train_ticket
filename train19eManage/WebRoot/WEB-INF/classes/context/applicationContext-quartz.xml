	<!-- 每月执行清空jchart文件里面的图片 -->
	<bean id="delete_Pics_Time" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="delete_Pics_Task"/>
		</property>
		<property name="cronExpression">
			<value>0 0 0 15 * ?</value>
