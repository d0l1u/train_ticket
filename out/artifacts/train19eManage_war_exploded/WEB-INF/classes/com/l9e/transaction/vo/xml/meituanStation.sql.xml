	<!-- 导出queryMeituanStationInfoExcel -->
	<select id="queryMeituanStationInfoExcel" parameterClass="java.util.HashMap" resultClass="java.util.HashMap">
			SELECT 
			  s.station_id,s.refund_seq,s.order_status,s.opt_person,
			  DATE_FORMAT(s.create_time,'%Y-%m-%d %H:%i:%s') create_time,c.channel,
			  s.order_id,c.from_time,p.cp_id,p.pay_money,p.buy_money,c.ticket_num,p.user_name 
			FROM
			  mt_refundstation s
			LEFT JOIN mt_orderinfo_cp p ON p.order_id =s.order_id
			LEFT JOIN mt_orderinfo c ON c.order_id =s.order_id
			WHERE 1=1
			<dynamic prepend="">
			<isNotEmpty prepend=" and " property="order_id">
				s.order_id = #order_id#
			</isNotEmpty>
			<isNotEmpty prepend=" and " property="refund_seq">
				s.refund_seq = #refund_seq#
			</isNotEmpty>
			<isNotEmpty prepend=" and " property="order_status">
				s.order_status in
				<iterate open="(" close=")" conjunction=","
					property="order_status">
					#order_status[]:VARCHAR#
				</iterate>
			</isNotEmpty>
			</dynamic>
		ORDER BY s.order_id DESC
	</select>
	
	
